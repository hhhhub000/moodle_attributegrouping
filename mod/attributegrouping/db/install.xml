<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/attributegrouping/db" VERSION="20241122" COMMENT="XMLDB file for Moodle mod_attributegrouping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="attributegrouping" COMMENT="Default comment for attributegrouping, please edit me">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Course attributegrouping activity belongs to"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="name field for moodle instances"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="General introduction of the attributegrouping activity"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Format of the intro field (MOODLE, HTML, MARKDOWN...)"/>
        <FIELD NAME="field_options" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Options for Field select box"/>
        <FIELD NAME="major_options" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Options for Major select box"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="course" UNIQUE="false" FIELDS="course"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="attributegrouping_entries" COMMENT="Stores student attributes for grouping">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="attributegroupingid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Instance ID"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="User ID"/>
        <FIELD NAME="international" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="International Student (1=Yes, 0=No)"/>
        <FIELD NAME="major" TYPE="char" LENGTH="100" NOTNULL="false" SEQUENCE="false" COMMENT="Student Major"/>
        <FIELD NAME="field" TYPE="char" LENGTH="100" NOTNULL="false" SEQUENCE="false" COMMENT="Field"/>
        <FIELD NAME="selfintro" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Self Introduction"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="attributegroupingid" TYPE="foreign" FIELDS="attributegroupingid" REFTABLE="attributegrouping" REFFIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="user_instance_idx" UNIQUE="true" FIELDS="userid, attributegroupingid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
